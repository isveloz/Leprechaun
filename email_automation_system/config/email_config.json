{
  "smtp_server": "${SMTP_SERVER}",
  "smtp_port": "${SMTP_PORT}",
  "use_tls": true,
  "username": "${USERNAME}",
  "password": "${PASSWORD}",
  "from_email": "${FROM_EMAIL}",
  "to_emails": [
    "destinatario1@dominio.com",
    "destinatario2@dominio.com"
  ],
  "templates": {
    "success": "templates/email_success.html",
    "error": "templates/email_error.html",
    "notification": "templates/notification.txt"
  },
  "default_subject": "Asunto por defecto del correo",
  "advanced_settings": {
    "priority": "high",
    "retry_attempts": 3,
    "timeout_seconds": 30
  },
  "validation": {
    "required_fields": ["smtp_server", "username", "password", "from_email", "to_emails"],
    "email_format": "^[^@\\s]+@[^@\\s]+\\.[^@\\s]+$"
  }
}